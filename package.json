{
  "name": "cli-chatbot",
  "version": "1.0.0",
  "description": "Chat bot funcional, com base em uma máquina de estados simples, capaz de interagir com o usuário, coletar informações e consultar APIs públicas externas.",
  "main": "index.js",
  "repository": "https://github.com/ramirezmz/cli-chatbot",
  "author": "ramirezmz",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": "23.11.0"
  },
  "scripts": {
    "start": "node --env-file=.env --experimental-strip-types ./src/index.ts",
    "start:build": "node --watch index.ts",
    "test": "node --test --experimental-strip-types ./src/*.test.ts",
    "test:coverage": "node --test --experimental-strip-types --experimental-test-coverage ./src/*.test.ts"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "chalk-animation": "^2.0.3",
    "inquirer": "^12.6.0",
    "nanospinner": "^1.2.2",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@types/chalk-animation": "^1.6.3",
    "@types/node": "^22.15.3"
  }
}
